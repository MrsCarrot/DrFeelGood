<%= form_for :appointment do |f| %>
    <div class="mb-3 row">
            <div class="col-sm-2 col-form-label">
            <%= f.label :name %>
            </div>
        
        <div class="col-sm-3">
            <%= f.text_field :body, required: true, minlenght: 2, class: 'form-control' %>
        </div>

    </div>

    <div class="col-sm-5">
        <div class="col-sm-2 col-form-label">
            <%= f.label :description %>
        </div>
        <div class="col-sm-10">
            <%= f.text_area :body, required: true, minlenght: 2, class: 'form-control' %>
        </div>
    </div>

    <%= f.submit "Submit your appointment", class: 'btn btn-secondary' %>
<% end %>