<%= form_for @user do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
        <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
    </div>
<% end %>